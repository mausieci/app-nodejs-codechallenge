{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/yape-challenge/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/yape-challenge/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/yape-challenge",
  "projects": {
    "yape-challenge": {
      "type": "application",
      "root": "apps/yape-challenge",
      "entryFile": "main",
      "sourceRoot": "apps/yape-challenge/src",
      "compilerOptions": {
        "tsConfigPath": "apps/yape-challenge/tsconfig.app.json"
      }
    },
    "anti-fraud": {
      "type": "application",
      "root": "apps/anti-fraud",
      "entryFile": "main",
      "sourceRoot": "apps/anti-fraud/src",
      "compilerOptions": {
        "tsConfigPath": "apps/anti-fraud/tsconfig.app.json"
      }
    }
  }
}